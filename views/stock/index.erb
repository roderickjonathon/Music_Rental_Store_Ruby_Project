<% for stock in @stock %>
<div class="box">
<p>ID: <%=stock.id%></p>
<p>Item: <%=stock.item_name%> </p>
<p>Category: <%=stock.item_category%></p>
<p>Price: <%=stock.price%></p>
<p>Quantity: <%=stock.quantity%></p>


<form action="/stock/<%= stock.id %>/delete" method="POST">
  <input class="btn" type="submit" value="delete" />
</form>
<form action="/stock/<%= stock.id %>/update" method="get">
  <input class="btn" type="submit" value="update" />
</form>
</div>

<% end %>

</div>
