<div class="container">






  <% for stock in @stock %>
  <div class="box2">

    <p id="p2">Item: </p> <p> <%=stock.item_name%> </p>

    <p id="p2">ID: </p><p> #<%=stock.id%></p>
    <p id="p2">Category: </p><p> <%=stock.item_category%></p>
    <p id="p2">Price: </p><p> Â£<%=stock.price%></p>
    <p id="p2">Quantity: </p><p> <%=stock.quantity%></p>

    <% if stock.quantity == 0 %>
    <h3> Item unavailable! </h3>
    <% elsif stock.quantity < 2 %>
    <h3> Stock running low! </h3>
    <%end%>


    <div class="button-place">


      <form action="/stock/<%=stock.id%>/show" method="get">
        <input class="btn" type="submit" value="View Item" />
      </form>
    </div>

  </div>

  <% end %>

</div>
