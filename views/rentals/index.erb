<div class="container">


<% for rental in @rentals %>
<div class="box">


<p>Reference: <%=rental.rental_reference%> </p>
<p>Item No: <a href="/stock/<%= rental.stock_id %>/show"> <%=rental.stock_id%></a> </p>
<p>Price: <%=rental.rental_price%></p>
<p>Rental Date: <%= rental.rental_date %></p>
<p>Customer No.: <a href="/customers/<%= rental.customer_id %>/show"> <%=rental.customer_id%></a> </p>

<form action="/rentals/<%=rental.id%>/show" method="get">
  <input class="btn" type="submit" value="View Rental" />
</form>

<form action="/rentals/<%=rental.id%>/return" method=get">
  <input class="btn" type="submit" name="" value="Check Item In">
</form>


</div>

<% end %>
</div>
