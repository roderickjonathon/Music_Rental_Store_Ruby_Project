<div class="container">


<% for customer in @customers %>
<div class="box">
<p>ID: <%=customer.id%></p>
<p>Name: <%= customer.name%> </p>
<p>Phone: <%= customer.phone%></p>
<p>Address: <%= customer.address%></p>
<p>Renting:<% customer.stock_rented.each do |item| %>
              <%= item %></p>
              <% end %>
<form action="/customers/<%= customer.id %>/delete" method="POST">
  <input class="btn" type="submit" value="Delete" />
</form>
<form action="/customers/<%= customer.id %>/update" method="get">
  <input class="btn" type="submit" value="Update" />
</form>
<form action="/customers/<%= customer.id %>/show" method="get">
  <input class="btn" type="submit" value="View Customer" />
</form>

</div>
<% end %>
</div>
